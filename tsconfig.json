{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [ "./src/*" ],
      "@shared/*": [ "./src/shared/*" ],
      "@entities/*": [ "./src/entities/*" ],
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
